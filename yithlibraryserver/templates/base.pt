<!DOCTYPE html>
<html lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:define-macro="base">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <title><tal:block metal:define-slot="header-title"></tal:block> - Yith Library</title>
    <meta name="description" content="">
    <meta name="author" content="">

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="shortcut icon" href="${request.static_path('yithlibraryserver:static/favicon.ico')}" />
    <link rel="stylesheet" href="${request.static_path('yithlibraryserver:static/css/bootstrap.css')}">
    <link rel="stylesheet" href="${request.static_path('yithlibraryserver:static/css/style.css')}">

    <!--[if lt IE 9]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
</head>
<body>
  <div class="container">
    <tal:block metal:define-slot="navbar">
      <div class="navbar">
        <div class="navbar-inner">
          <div class="container">
            <a class="brand" href="${request.route_path('home')}">Yith Library</a>
            <ul class="nav">
              <li>
                <a href="#">How it works</a>
              </li>
              <li>
                <a href="#">About</a>
              </li>
              <li>
                <a href="#">License</a>
              </li>
            </ul>
            <ul class="nav pull-right">
              <li tal:condition="not request.user">
                <a href="${request.route_path('login')}">Log in</a>
              </li>
              <li tal:condition="request.user" class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  ${request.user.first_name} <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li>
                    <a href="#">Passwords</a>
                  </li>
                  <li>
                    <a href="${request.route_path('oauth2_applications')}">Applications</a>
                  </li>
                  <li>
                    <a href="${request.route_path('logout')}">Log out</a>
                  </li>
                </ul>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </tal:block>

    <div id="messages">
      <div tal:repeat="queue ('info', 'success', 'error', '')" tal:omit-tag="">
        <div class="alert alert-${queue}"
             tal:define="messages request.session.pop_flash(queue)"
             tal:condition="messages"
             tal:repeat="message messages">
          <button class="close" data-dismiss="alert">x</button>
          ${message}
        </div>
      </div>
    </div>

    <tal:block metal:define-slot="content"></tal:block>

    <footer class="container">
      <ul class="pull-left">
        <li><a href="#">Terms of use</a> |</li>
        <li><a href="https://github.com/Yaco-Sistemas/yith-library-web-client" target="_blank">Fork us in GitHub!</a></li>
      </ul>
      <ul class="pull-right">
        <li>Icons from <a href="http://glyphicons.com" target="_blank">Glyphicons Free</a> - <a href="http://creativecommons.org/licenses/by/3.0/" target="_blank">CC BY 3.0</a></li>
      </ul>
    </footer>

  </div>

  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
  <script>window.jQuery || document.write('<script src=\'${request.static_path("yithlibraryserver:static/js/libs/jquery-1.7.2.min.js")}\'><\/script>')</script>
  <script src="${request.static_path('yithlibraryserver:static/js/libs/bootstrap.min.js')}"></script>
</body>
</html>
